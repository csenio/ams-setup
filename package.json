{
  "name": "oneworks-frontend",
  "version": "0.1.0",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "author": "Story of AMS B.V.",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "better-npm-run dev",
    "storybook": "start-storybook",
    "start": "better-npm-run start",
    "build": "yarn clean:build && better-npm-run build",
    "analyze": "yarn clean:build && better-npm-run analyze",
    "lint": "npm-run-all lint:js lint:style",
    "lint:js": "better-npm-run lint:js",
    "lint:style": "better-npm-run lint:style",
    "flow": "better-npm-run flow",
    "flow:stop": "better-npm-run flow:stop",
    "test": "better-npm-run test",
    "test:watch": "yarn test --watch",
    "clean": "npm-run-all clean:build clean:test",
    "clean:build": "better-npm-run clean:build",
    "clean:test": "better-npm-run clean:test",
    "coveralls": "yarn clean:test && better-npm-run coveralls"
  },
  "betterScripts": {
    "dev": {
      "command": "webpack-dev-server --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start": {
      "command": "node .",
      "env": {
        "PORT": 8080
      }
    },
    "build": {
      "command": "webpack --progress --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "analyze": {
      "command": "webpack -p --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "analyze"
      }
    },
    "lint:js": {
      "command": "eslint --fix ./src ./tools ./index.js"
    },
    "lint:style": {
      "command": "stylelint --fix \"./src/**/*.js\""
    },
    "flow": {
      "command": "flow"
    },
    "flow:stop": {
      "command": "flow stop"
    },
    "test": {
      "command": "jest --coverage",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "clean:build": {
      "command": "rimraf ./public/assets"
    },
    "clean:test": {
      "command": "rimraf ./coverage"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "stylelint",
    "*.css": "stylelint"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "import",
      "lodash",
      "react",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./tools/webpack/config.babel.js"
        }
      }
    },
    "env": {
      "browser": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "jsx-a11y/anchor-has-content": "off",
      "jsx-a11y/aria-role": "off",
      "jsx-a11y/aria-props": "off",
      "jsx-a11y/aria-proptypes": "off",
      "jsx-a11y/aria-unsupported-elements": "off",
      "jsx-a11y/alt-text": "off",
      "jsx-a11y/img-redundant-alt": "off",
      "jsx-a11y/label-has-for": "off",
      "jsx-a11y/label-has-associated-control": "off",
      "jsx-a11y/mouse-events-have-key-events": "off",
      "jsx-a11y/no-access-key": "off",
      "jsx-a11y/no-onchange": "off",
      "jsx-a11y/interactive-supports-focus": "off",
      "jsx-a11y/role-has-required-aria-props": "off",
      "jsx-a11y/role-supports-aria-props": "off",
      "jsx-a11y/tabindex-no-positive": "off",
      "jsx-a11y/heading-has-content": "off",
      "jsx-a11y/html-has-lang": "off",
      "jsx-a11y/lang": "off",
      "jsx-a11y/no-distracting-elements": "off",
      "jsx-a11y/scope": "off",
      "jsx-a11y/click-events-have-key-events": "off",
      "jsx-a11y/no-static-element-interactions": "off",
      "jsx-a11y/no-noninteractive-element-interactions": "off",
      "jsx-a11y/accessible-emoji": "off",
      "jsx-a11y/aria-activedescendant-has-tabindex": "off",
      "jsx-a11y/iframe-has-title": "off",
      "jsx-a11y/no-autofocus": "off",
      "jsx-a11y/no-redundant-roles": "off",
      "jsx-a11y/media-has-caption": "off",
      "jsx-a11y/no-interactive-element-to-noninteractive-role": "off",
      "jsx-a11y/no-noninteractive-element-to-interactive-role": "off",
      "jsx-a11y/no-noninteractive-tabindex": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "react/button-has-type": "off",
      "react/destructuring-assignment": "off",
      "react/prop-types": "off",
      "react/forbid-prop-types": "off",
      "react/prefer-stateless-function": "off",
      "react/no-multi-comp": "off",
      "react/jsx-key": "error",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-cycle": "off",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "camelcase": "off",
      "global-require": "off",
      "no-console": "off",
      "no-underscore-dangle": "off",
      "no-use-before-define": "off",
      "function-paren-newline": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    },
    "globals": {
      "__DEV__": true
    }
  },
  "eslintIgnore": [],
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "rules": {
      "string-quotes": "single",
      "font-family-no-missing-generic-family-keyword": null,
      "no-descending-specificity": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "local"
          ]
        }
      ]
    }
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tools/jest/setup.js",
    "globals": {
      "__DEV__": true
    },
    "collectCoverageFrom": [
      "src/app/**/*.js",
      "src/pages/**/*.js",
      "src/components/**/*.js",
      "src/actions/**/*.js",
      "src/reducers/**/*.js",
      "!src/actions/index.js",
      "!src/components/index.js",
      "!src/pages/index.js",
      "!src/pages/home/index.js",
      "!src/reducers/index.js"
    ],
    "moduleNameMapper": {
      ".*\\.(css|scss|sass)$": "<rootDir>/tools/jest/styleMock.js",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/jest/assetMock.js"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/server.js",
      "src/utils/renderHtml.js"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "@storybook/addon-links": "^5.0.6",
    "autoprefixer": "^9.1.3",
    "axios": "^0.18.0",
    "better-npm-run": "^0.1.1",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "connected-react-router": "^5.0.1",
    "cross-spawn": "^6.0.5",
    "date-fns": "^1.29.0",
    "file-saver": "^1.3.8",
    "fontfaceobserver": "^2.1.0",
    "history": "^4.7.2",
    "lodash": "^4.17.11",
    "node-sass": "^4.10.0",
    "polished": "^3.2.0",
    "prop-types": "^15.7.2",
    "query-string": "5.1.1",
    "react": "^16.8.4",
    "react-dom": "16.8.4",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.8.2",
    "react-redux": "^5.1.1",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-toastify": "^4.5.2",
    "reactstrap": "^6.4.0",
    "redux": "^4.0.1",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "sanitize.css": "^8.0.0",
    "storybook-addon-styled-component-theme": "^1.2.3",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "@storybook/addon-actions": "^5.0.6",
    "@storybook/addon-info": "^5.0.6",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-storysource": "^5.0.6",
    "@storybook/react": "^5.0.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-istanbul": "^5.0.1",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "circular-dependency-plugin": "^5.0.2",
    "compression-webpack-plugin": "^2.0.0",
    "coveralls": "^3.0.2",
    "css-hot-loader": "^1.4.2",
    "css-loader": "^1.0.1",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-lodash": "^2.7.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "glob": "^7.1.3",
    "html-loader": "^0.5.5",
